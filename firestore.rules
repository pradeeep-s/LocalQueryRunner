rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ---------------------------
    // Helper Functions
    // ---------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    function isAgent() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "agent";
    }

    function agentClientId() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.clientId;
    }

    // <CHANGE> Add helper functions for Engineer role
    function isEngineer() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "engineer";
    }

    function engineerAssignedClients() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.assignedClients;
    }

    function isEngineerAssignedToClient(clientId) {
      return isEngineer() && clientId in engineerAssignedClients();
    }

    // ---------------------------
    // USERS COLLECTION
    // ---------------------------
    match /users/{uid} {
      allow read: if request.auth.uid == uid || isAdmin() || isEngineer();
      allow write: if isAdmin();
    }

    // ---------------------------
    // CLIENTS COLLECTION
    // ---------------------------
    match /clients/{clientId} {
      // <CHANGE> Allow engineers to read clients they are assigned to
      allow read: if isAdmin() || isEngineerAssignedToClient(clientId);
      allow write: if isAdmin();
    }

    // ---------------------------
    // DB_CONFIGS COLLECTION
    // ---------------------------
    match /db_configs/{clientId} {
      // <CHANGE> Allow engineers to read db configs for their assigned clients
      allow read: if isAdmin() || (isAgent() && clientId == agentClientId()) || isEngineerAssignedToClient(clientId);
      allow write: if isAdmin();
    }

    // ---------------------------
    // QUERIES COLLECTION
    // ---------------------------
    match /queries/{queryId} {
      // <CHANGE> Allow engineers to read queries
      allow read: if isAdmin() || isAgent() || isEngineer();
      allow write: if isAdmin();
    }

    // ---------------------------
    // COMMANDS COLLECTION
    // ---------------------------
    match /commands/{commandId} {
      // <CHANGE> Allow engineers to manage commands for their assigned clients
      allow read, write: if isAdmin();

      allow read, update: if isAgent()
        && resource.data.clientId == agentClientId();

      allow create: if isAgent()
        && request.resource.data.clientId == agentClientId();

      allow read, update: if isEngineer()
        && resource.data.clientId in engineerAssignedClients();

      allow create: if isEngineer()
        && request.resource.data.clientId in engineerAssignedClients();
    }

    // ---------------------------
    // LOGS COLLECTION
    // ---------------------------
    match /logs/{logId} {
      // <CHANGE> Allow engineers to read logs
      allow read: if isAdmin() || isEngineer();
      allow write: if isAdmin();
    }
  }
}
